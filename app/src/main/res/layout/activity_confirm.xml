<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    tools:context="com.example.application2.Confirm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/profile"
        tools:ignore="MissingConstraints">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="CONFIRM BOOKING"
        android:textColor="#F5F5F8"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="56dp"
        android:text="Date - 30 October 2020"
        android:drawableLeft="@android:drawable/ic_dialog_dialer"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <TextView
        android:id="@+id/textView_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@android:drawable/ic_popup_reminder"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:text="Time - 12:00 PM"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/textView_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:text="Base Amount - Rs. 150"
        android:drawableLeft="@android:drawable/stat_notify_more"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    </LinearLayout>

    <Button
        android:id="@+id/bonline"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_margin="110dp"
        android:background="@drawable/mybutton"
        android:onClick="Booked"
        android:text="PAY ONLINE"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1"></Button>

    <Button
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:background="@drawable/mybutton"
        android:onClick="Booked"
        android:text="PAY IN CASH"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:layout_margin="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bonline"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>