<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcce2f"
    tools:context="com.example.application2.Feedback">
    <ImageView
        android:id="@+id/imgloginicon"
        android:layout_width="201dp"
        android:layout_height="100dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="25dp"
        android:paddingTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ff"
        app:srcCompat="@drawable/feed" />
    <TextView
        android:id="@+id/ff"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="FEEDBACK FORM"
        android:textColor="#6214ED"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.447" />


    <EditText
        android:id="@+id/etfbr"
        android:layout_width="284dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="Rating"
        android:layout_marginTop="200dp"
        android:drawableLeft="@android:drawable/btn_star"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:inputType="text|number"
        android:background="@drawable/myedittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <EditText
        android:id="@+id/etfbc"
        android:layout_width="284dp"
        android:layout_height="72dp"
        android:ems="10"
        android:hint="Comments"
        android:layout_marginTop="300dp"
        android:inputType="textLongMessage"
        android:drawableLeft="@android:drawable/stat_notify_chat"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:background="@drawable/myedittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btns"
        android:layout_width="211dp"
        android:layout_height="67dp"
        android:background="@drawable/mybutton"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        android:text="Submit"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>